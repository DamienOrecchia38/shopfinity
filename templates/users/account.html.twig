{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        <h1 class="text-2xl font-semibold text-gray-800">Mes informations</h1>

        <div class="mt-6 bg-white shadow-md rounded-lg">
            <div class="p-6">
                <div class="grid grid-cols-2 gap-4">

                    <div class="font-bold text-gray-600">Email :</div>
                    <div>{{ user.email }}</div>

                    <div class="font-bold text-gray-600">Nom :</div>
                    <div>{{ user.name }}</div>

                    <div class="font-bold text-gray-600">Date de création :</div>
                    <div>{{ user.createdAt ? user.createdAt|date('Y-m-d') : 'Non spécifié' }}</div>
                </div>
            </div>
        </div>

        <div class="mt-4 flex justify-between">
            <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="text-blue-500 hover:text-blue-700">Modifier</a>
        </div>

        <div class="mt-2">
            {{ include('users/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
