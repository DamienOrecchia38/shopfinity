{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="flex items-center justify-center min-h-screen">

        <div class="max-w-xl w-full px-8 py-10 bg-white shadow-md rounded">

            {# <h1 class="text-3xl font-bold text-center mb-10">Inscription</h1> #}
            <h1 class="text-3xl font-bold text-center mb-10">Inscription <i class="fas fa-spinner fa-spin"></i></h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-8'}}) }}

                <div>
                    {{ form_label(registrationForm.name, 'Nom', {'label_attr': {'class': 'block text-md font-bold text-gray-700'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm', 'placeholder': 'Votre nom et pr√©nom'}}) }}
                    {{ form_errors(registrationForm.name) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-md font-bold text-gray-700'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm','placeholder': 'Votre adresse mail'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-md font-bold text-gray-700'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm', 'placeholder': 'Votre mot de passe'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-600 border-gray-300 rounded'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'ml-2 text-sm font-bold text-gray-900'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="signup-button bg-gradient-to-r hover:bg-gradient-to-l from-yellow-500 to-customStrongYellow text-white font-bold py-3 px-6 rounded">
                INSCRIPTION
                    </button>
                </div>
                
            {{ form_end(registrationForm) }}

        </div>
        
    </div>

{% endblock %}
