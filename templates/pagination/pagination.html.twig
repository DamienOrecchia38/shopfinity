{% block pagination %}       
       
        {% set paginationData = products.getPaginationData() %}

        {% if paginationData.pageCount > 1 %}
            <div class="flex justify-center items-center w-full mt-8 mb-8">
                <ul class="inline-flex -space-x-px text-lg h-12 justify-center w-full">
                    {% if paginationData.previous is defined %}
                        <li>
                            <a href="{{ path('app_home', {'page': paginationData.previous}) }}" class="flex items-center justify-center px-8 h-12 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-white hover:text-gray-700 dark:bg-white dark:border-gray-300 dark:text-gray-400 dark:hover:bg-white dark:hover:text-gray-700">Précédent</a>
                        </li>
                    {% endif %}
                    {% for page in paginationData.pagesInRange %}
                        <li>
                            <a href="{{ path('app_home', {'page': page}) }}" class="flex items-center justify-center px-8 h-12 leading-tight bg-white border border-gray-300 hover:bg-white hover:text-gray-700 dark:bg-white dark:border-gray-300 dark:text-gray-400 dark:hover:bg-white dark:hover:text-gray-700 {{ page == paginationData.current ? 'text-black font-bold' : 'text-gray-500' }}">{{ page }}</a>
                        </li>
                    {% endfor %}
                    {% if paginationData.next is defined %}
                        <li>
                            <a href="{{ path('app_home', {'page': paginationData.next}) }}" class="flex items-center justify-center px-8 h-12 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-white hover:text-gray-700 dark:bg-white dark:border-gray-300 dark:text-gray-400 dark:hover:bg-white dark:hover:text-gray-700">Suivant</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}

{% endblock %}