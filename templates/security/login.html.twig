{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <form method="post" class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
        {% if error %}
            <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Connexion</h1>
        <div class="mb-4">
            <label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" required autofocus>
        </div>
        <div class="mb-6">
            <label for="inputPassword" class="block text-gray-700 text-sm font-bold mb-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
