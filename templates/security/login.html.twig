{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="min-h-screen flex items-center justify-center">

        <form method="post" class="w-full max-w-lg bg-white rounded-lg shadow-md p-10">

            {% if error %}
                <div class="bg-red-500 text-white font-bold rounded-t px-6 py-3">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <h1 class="block w-full text-center text-gray-800 text-3xl font-bold mb-8">
                <span class="icon animate-bounce">ðŸ”‘</span> Connexion
            </h1>

            <div class="mb-6">
                <label for="inputEmail" class="block text-gray-700 text-md font-bold mb-3">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" class="shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" required autofocus>
            </div>

            <div class="mb-8">
                <label for="inputPassword" class="block text-gray-700 text-md font-bold mb-3">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex justify-center">
                <button class="bg-gradient-to-r hover:bg-gradient-to-l from-yellow-500 to-customStrongYellow text-white font-bold py-3 px-6 rounded" type="submit">
                    CONNEXION
                </button>
            </div>

        </form>

    </div>

{% endblock %}
