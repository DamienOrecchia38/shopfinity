{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex items-center justify-center min-h-screen">

        <div class="max-w-xl w-full px-8 py-10 bg-white shadow-md rounded">

            <h1 class="text-3xl font-bold text-center mb-10">Modifier mon mot de passe <i class="fas fa-spinner fa-spin"></i></h1>

            {{ form_errors(form) }}

            {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

                <div>
                    {{ form_label(form.oldPassword, 'Ancien mot de passe', {'label_attr': {'class': 'block text-md font-bold text-gray-700'}}) }}
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm', 'placeholder': 'Votre ancien mot de passe'}}) }}
                    {{ form_errors(form.oldPassword) }}
                </div>

                <div>
                    {{ form_label(form.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-md font-bold text-gray-700'}}) }}
                    {{ form_widget(form.newPassword, {'attr': {'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm','placeholder': 'Votre nouveau mot de passe'}}) }}
                    {{ form_errors(form.newPassword) }}
                </div>

                <div class="flex justify-center">
                    <button type="submit" formaction="{{ path('app_users_update_password', {'id': user.id}) }}" class="bg-gradient-to-r hover:bg-gradient-to-l from-yellow-500 to-customStrongYellow text-white font-bold py-3 px-6 rounded">
                MODIFIER
                    </button>
                </div>
                
            {{ form_end(form) }}

        </div>
        
    </div>

{% endblock %}
