{% extends 'base.html.twig' %}

{% block title %}Index des commandes{% endblock %}

{% block body %}

    <div class="flex justify-center mt-6">
        <div class="w-full max-w-4xl bg-white p-6 rounded-lg shadow">
            <h1 class="text-3xl font-bold mb-4">Panier</h1>

            {% if products is empty %}
                <p class="text-gray-700 text-lg">Votre panier est vide.</p>
            {% else %}
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead class="bg-gray-800 text-white">
                            <tr>
                                <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Produit</th>
                                <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Quantité</th>
                                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Prix</th>
                                <th class="text-left py-3 px-4 uppercase font-semibold text-sm"></th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-700">
                            {% for item in products %}
                                <tr>
                                    <td class="w-1/3 text-left py-3 px-4">{{ item.product.title }}</td>
                                    <td class="w-1/3 text-left py-3 px-4">{{ item.quantity }}</td>
                                    <td class="text-left py-3 px-4">{{ item.product.price }} €</td>
                                    <td class="text-left py-3 px-4">
                                        <form action="{{ path('app_remove_from_cart', {'id': item.product.id}) }}" method="post">
                                            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td colspan="2" class="text-right">Montant total de votre panier : </td>
                                <td> {{ priceTotal }} €</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    {# <a href="{{ path('app_orders_new') }}" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Valider ma commande</a> #}
{% endblock %}
